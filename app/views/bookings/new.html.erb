<% provide :title, @booking.tour_detail.tour_detail_name%>
<div class="container p-3">
  <div class="row">
    <h3><%= @booking.tour_detail.tour_detail_name %></h3>
    <div class="row">
      <div class="col-6 p-3">
        <%= image_tag default_image(@booking.tour_detail.tour), class: "img-fluid w-100", alt: t("tours.tour_image") %>
      </div>
      <div class="col-6 p-3">
        <div class="row">
          <div class="col-6">
            <span class="font-weight-bold"><%= t("tour_details.form.max_people") %></span>
          </div>
          <div class="col-6">
            <a class="h5 m-0 text-decoration-none" href="#"><%= @booking.tour_detail.max_people %></a>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-6">
            <span class="font-weight-bold"><%= t("tour_details.form.start_location") %></span>
          </div>
          <div class="col-6">
            <a class="h5 m-0 text-decoration-none" href="#"><%= @booking.tour_detail.start_location %></a>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-6">
            <span class="font-weight-bold"><%= t("tour_details.form.time_duration") %></span>
          </div>
          <div class="col-6">
            <a class="h5 m-0 text-decoration-none" href="#"><%= t("tour_details.form.time_duration_view" , days: @booking.tour_detail.time_duration) %></a>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-6">
            <span class="font-weight-bold"><%= t("tour_details.form.price") %></span>
          </div>
          <div class="col-6">
            <a class="h5 m-0 text-decoration-none text-danger" style="font-size: 1.5em;" href="#">
              <%= number_to_currency(@booking.tour_detail.price, unit: " Ä‘", precision: 0) %>
            </a>
          </div>
        </div>
        <hr>
      </div>
    </div>
  </div>
  <div class="container">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="book-tab" data-bs-toggle="tab" data-bs-target="#book" type="button" role="tab" aria-controls="book" aria-selected="true">
          <%=t("bookings.booking")%>
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="schedule-tab" data-bs-toggle="tab" data-bs-target="#schedule" type="button" role="tab" aria-controls="schedule" aria-selected="false">
          <%=t("tour_details.form.schedule")%>
        </button>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="book" role="tabpanel" aria-labelledby="book-tab">
        <%= render "bookings/form" ,submit_text: t("buttons.submit") %>
      </div>
      <div class="tab-pane fade" id="schedule" role="tabpanel" aria-labelledby="schedule-tab">
        <div class="container">
          <%= @booking.tour_detail.schedule %>
        </div>
      </div>
    </div>
  </div>
</div>
