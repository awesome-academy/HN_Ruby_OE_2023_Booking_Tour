<%= turbo_frame_tag :flash do %>
  <% flash.each do |type, message| %>
    <% if !type %>
      <div class="alert alert-<%= type %> alert-dismissible fade show" role="alert">
        <%= message %>
      </div>
    <% else %>
      <% if alert %>
        <div class="alert alert-success">
          <%= alert %>
        </div>
      <% end %>
      <% if notice %>
        <div class="alert alert-info">
          <%= notice %>
        </div>
      <% end %>
    <% end %>
  <% end %>
<% end %>
