<!-- Blog Start -->
<div class="container py-2">
  <div class="row">
    <div class="col-9">
      <% if admin? %>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item active">
                <%= link_to t('tours.navbar.edit'), edit_admin_tour_path(@tour), class: "nav-link"  %>
              </li>
              <li class="nav-item">
                <%= link_to t('tour_details.deleted_tour'), admin_tour_path(@tour), class: "nav-link text-danger", data: { turbo_method: "delete", turbo_confirm: t('tour_details.confirm_delete')} %>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <%= t('tours.navbar.tour_details') %>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <%= link_to t('tours.navbar.add_details'), admin_add_tour_detail_path(@tour), class: "dropdown-item" %>
                </div>
              </li>
            </ul>
          </div>
        </nav>
      <% end %>
      <div class="pb-3">
        <div class="blog-item">
          <div class="position-relative">
            <%= image_tag @tour.image, class: "img-fluid w-100", alt: "Tour Image" if @tour.image&.attached?   %>
          </div>
        </div>
        <div class="bg-white mb-3 p-3">
          <%= @tour.content %>
          <hr>
          <div class="row">
            <div class="col-md-4">
              <span class="font-weight-bold"><%= t('tours.category') %></span>
            </div>
            <div class="col-md-8">
              <a class="h5 m-0 text-decoration-none" href="#"><%= @tour.tour_category.category_name %></a>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <span class="font-weight-bold"><%= t('tours.time_duration') %></span>
            </div>
            <div class="col-md-8">
              <a class="h5 m-0 text-decoration-none" href="#"><%= @tour.time_duration %></a>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <span class="font-weight-bold"><%= t('tours.tour_description') %></span>
            </div>
            <div class="col-md-8">
              <a class="h5 m-0 text-decoration-none" href="#"><%= @tour.tour_description %></a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Blog Detail End -->
    <div class="col-3">
      <div class="mb-5">
        <% if @tour.tour_details.any? %>
          <% @tour.tour_details.each do |tour_detail| %>
            <%= render 'admin/tour_details/tour_detail_preview', tour_detail: tour_detail %>
          <% end %>
        <% end %>
      </div>
      <%= turbo_frame_tag "booking" do %>
      <% end %>
    </div>
  </div>
</div>
<!-- Blog End -->
