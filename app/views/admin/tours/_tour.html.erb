<div class="col-md-6 mb-4 pb-2">
  <div class="blog-item">
    <div class="position-relative">
      <%= image_tag tour.image, class: "img-fluid w-100", alt: t("tours.tour_image") if tour.image&.attached? %>
    </div>
    <div class="bg-white p-4">
      <div class="d-flex mb-2">
        <%= link_to tour.tour_name, admin_tour_path(tour) %>
      </div>
      <div class="row">
        <div class="col-md-4">
          <span class="font-weight-bold"><%= t("tours.category") %></span>
        </div>
        <div class="col-md-8">
          <a class="h5 m-0 text-decoration-none" href="#"><%= tour.tour_category.category_name %></a>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <span class="font-weight-bold"><%= t("tours.tour_description") %></span>
        </div>
        <div class="col-md-8">
          <a class="h5 m-0 text-decoration-none" href="#"><%= tour.tour_description %></a>
        </div>
      </div>
    </div>
  </div>
</div>
