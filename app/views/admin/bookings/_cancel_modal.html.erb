<%= turbo_frame_tag :remote_modal, target: :_top do %>
  <div class="modal fade" id="cancelModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-controller="bs-modal">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><%= t("cancel_modal.title") %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <%= form_with model: @booking, url: admin_submit_cancel_booking_path, method: :post do |form| %>
          <div class="modal-body">
            <div class="row">
              <div class="col-12">
                <div class="form_group">
                  <%= form.label :reason, class: "mb-3" %>
                  <%= form.text_area :reason, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t("cancel_modal.close_button") %></button>
            <%= form.submit t("cancel_modal.submit_button"), data: { action: "click->bs-modal#submitEnd" }, class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
