<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <h2><%= t("user.loginpage.signup") %></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
          <% if @user.errors[:email].any? %>
            <p class="text-danger"><%= @user.errors[:email].first %></p>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :username, t("user.signuppate.user_label") %>
          <%= f.text_field :username, class: "form-control", placeholder: t("user.signuppate.user_label") %>
          <% if @user.errors[:username].any? %>
            <p class="text-danger"><%= @user.errors[:username].first %></p>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :phone, t("user.signuppate.phone") %>
          <%= f.telephone_field :phone, class: "form-control", placeholder: t("user.signuppate.phone") %>
          <% if @user.errors[:phone].any? %>
            <p class="text-danger"><%= @user.errors[:phone].first %></p>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :password, t("user.signuppate.password") %>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
          <% if @user.errors[:password].any? %>
            <p class="text-danger"><%= @user.errors[:password].first %></p>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, t("user.signuppate.password_confirm_label") %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          <% if @user.errors[:password_confirmation].any? %>
            <p class="text-danger"><%= @user.errors[:password_confirmation].first %></p>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.file_field :avatar %>
        </div>
        <div class="actions">
          <%= f.submit t("user.loginpage.signup") %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
